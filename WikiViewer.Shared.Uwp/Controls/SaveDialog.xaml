<ContentDialog
    x:Class="WikiViewer.Shared.Uwp.Controls.SaveDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Save Page"
    PrimaryButtonText="Save and Submit"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="SaveDialog_PrimaryButtonClick">

    <StackPanel Margin="12">
        <TextBlock Text="Briefly describe the changes you made." TextWrapping="Wrap"/>
        <TextBox x:Name="SummaryTextBox" PlaceholderText="e.g., fixed typo, added new section" />
        <CheckBox x:Name="MinorEditCheckBox" Content="This is a minor edit"/>
    </StackPanel>
</ContentDialog>