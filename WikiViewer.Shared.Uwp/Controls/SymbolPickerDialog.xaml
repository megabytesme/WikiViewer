<ContentDialog
    x:Class="WikiViewer.Shared.Uwp.Controls.SymbolPickerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WikiViewer.Shared.Uwp.ViewModels"
    mc:Ignorable="d"
    Title="Insert Special Character"
    PrimaryButtonText="Insert"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid MinWidth="400" MaxWidth="600" MinHeight="300" MaxHeight="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="FilterTextBox"
                 Header="Filter by name (e.g., 'euro', 'pi')"
                 TextChanged="FilterTextBox_TextChanged"
                 Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                      BorderThickness="1"
                      Background="{ThemeResource SystemControlBackgroundListLowBrush}">
            <GridView x:Name="SymbolGridView"
                      IsItemClickEnabled="True"
                      ItemClick="SymbolGridView_ItemClick"
                      SelectionMode="Single"
                      HorizontalAlignment="Center"
                      Padding="4">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="vm:SymbolViewModel">
                        <Grid Width="48" Height="48"
                              Background="Transparent"
                              ToolTipService.ToolTip="{x:Bind Tooltip}">
                            <TextBlock Text="{x:Bind Character}"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlTransparentBrush}" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="Margin" Value="2" />
                    </Style>
                </GridView.ItemContainerStyle>
            </GridView>
        </ScrollViewer>
    </Grid>
</ContentDialog>