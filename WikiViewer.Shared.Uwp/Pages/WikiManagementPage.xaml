<Page
    x:Class="WikiViewer.Shared.Uwp.Pages.WikiManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WikiViewer.Core.Models"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Style="{StaticResource PageTitleBarGridStyle}">
            <TextBlock Text="Manage Wikis" Style="{StaticResource PageTitleBarTextStyle}"/>
        </Grid>

        <ListView x:Name="WikiListView"
                  Grid.Row="1"
                  ItemsSource="{x:Bind Wikis}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="WikiListView_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:WikiInstance">
                    <StackPanel Padding="12,8" Margin="4">
                        <TextBlock Text="{x:Bind Name}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                        <TextBlock Text="{x:Bind BaseUrl}" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.7"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <CommandBar Grid.Row="1" VerticalAlignment="Bottom">
            <AppBarButton Icon="Add" Label="Add Wiki" Click="AddWikiButton_Click"/>
        </CommandBar>
    </Grid>
</Page>