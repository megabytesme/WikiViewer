<UserControl
    x:Class="_1507_UWP.Controls.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Height="48" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
          BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="HamburgerButton" Click="HamburgerButton_Click" Width="44" Height="44" Background="Transparent" BorderThickness="0" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"/>
            <TextBlock x:Name="PageTitleTextBlock" Style="{StaticResource PageTitleBarTextStyle}" TextWrapping="Wrap" Visibility="Collapsed"/>
        </StackPanel>

        <AutoSuggestBox x:Name="NavSearchBox" Grid.Column="1" QueryIcon="Find" PlaceholderText="Search..." 
              Width="200" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0"
              UpdateTextOnSelect="False" TextMemberPath="Title">
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate xmlns:vm="using:WikiViewer.Shared.Uwp.ViewModels" x:DataType="vm:SearchSuggestionViewModel">
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <Image Source="{x:Bind IconUrl}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <StackPanel>
                            <TextBlock Text="{x:Bind Title}"/>
                            <TextBlock Text="{x:Bind WikiName}" Opacity="0.7" Style="{StaticResource CaptionTextBlockStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>
    </Grid>
</UserControl>