<Page
    x:Class="_1809_UWP.CreateAccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="360" Spacing="12" Padding="0,24">
                <TextBlock x:Name="PageTitle" Text="Create Account" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center"/>

                <StackPanel x:Name="FieldsPanel" Spacing="12"/>

                <Button x:Name="CreateButton" Content="Create Account" HorizontalAlignment="Stretch" Click="CreateButton_Click" Margin="0,12,0,0"/>
                <ProgressRing x:Name="LoadingRing" IsActive="False"/>

                <muxc:WebView2 x:Name="ErrorWebView" Height="150" Visibility="Collapsed"/>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>